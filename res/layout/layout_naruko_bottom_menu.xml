<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomMenu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/bottomMenu_button_hashtag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/item_image"
        android:scaleX="-1"
        android:scaleY="-1"
        android:tint="#ffffff"
        app:srcCompat="@drawable/ic_hash_icon" />

    <ImageView
        android:id="@+id/bottomMenu__button_attach"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/item_image"
        android:foregroundGravity="clip_horizontal"
        android:tint="#ffffff"
        app:srcCompat="@drawable/ic_attach_file_black_24dp" />

    <ImageView
        android:id="@+id/bottomMenu_button_place"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/item_image"
        android:foregroundGravity="clip_horizontal"
        android:tint="#ffffff"
        app:srcCompat="@drawable/ic_place_black_24dp" />

    <ImageView
        android:id="@+id/bottomMenu_button_slide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/item_image"
        android:foregroundGravity="clip_horizontal"
        android:scaleY="-1"
        android:tint="#ffffff"
        app:srcCompat="@drawable/ic_swap_horiz_black_24dp" />
</LinearLayout>