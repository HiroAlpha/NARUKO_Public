<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/itemUser_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/itemUser_imageView_userImage"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher_background"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="4dp" />

        <ImageView
            android:id="@+id/itemUser_imageView_whiteCircle"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/item_image"
            app:srcCompat="@drawable/image_naruko_icon_circle" />

        <TextView
            android:id="@+id/itemUser_textView"
            android:layout_width="100dp"
            android:layout_height="14dp"
            android:layout_below="@id/itemUser_imageView_userImage"
            android:fontFamily="@font/allerta"
            android:text="@string/sample_text"
            android:textAlignment="center"
            android:textSize="10sp" />

    </RelativeLayout>

</merge>